# Server Configuration
PORT=3000
NODE_ENV=production

# S3 Configuration (optional - leave empty to use local storage)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET_NAME=
S3_REGION=us-east-1

# Local Storage Configuration (fallback when S3 not configured)
# Works on all platforms: Linux, macOS, Windows, Docker
# Examples: /data/storage (Unix), C:/storage (Windows), /var/lib/s3-viewer (Linux)
LOCAL_STORAGE_ENABLED=false
LOCAL_STORAGE_PATH=/data/storage

# Security
JWT_SECRET=
ALLOWED_ORIGINS=http://localhost:3000

# Authentication - Local
AUTH_LOCAL_ENABLED=true
AUTH_USER=admin
AUTH_PASS=admin123

# Authentication - OIDC
AUTH_OIDC_ENABLED=false
AUTH_OIDC_ISSUER=https://keycloak.example.com/realms/myrealm
AUTH_OIDC_CLIENT_ID=s3-viewer
AUTH_OIDC_CLIENT_SECRET=
AUTH_OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
AUTH_OIDC_SCOPE=openid profile email
